<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ListNilaiSiswaAcivity">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="Nilai Siswa"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/tombol_bunder_inverse"
            android:padding="5dp" />

        <EditText
            android:id="@+id/editText_cari_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_stroke"
            android:ems="3"
            android:hint="nama"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/tombol_bunder"
            android:onClick="goHome"
            android:src="?attr/homeAsUpIndicator"
            android:textColor="@android:color/background_light" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/tombol_bunder"
            android:onClick="setNilaiSiswa"
            android:src="@android:drawable/stat_notify_sync"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/tombol_bunder"
            android:onClick="cetak"
            android:text="Cetak"
            android:textColor="@android:color/background_light" />

        <ImageButton
            android:id="@+id/btn_cari"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/tombol_bunder"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="listNilaiSiswaUpdate"
            android:scaleType="fitCenter"
            android:src="@drawable/search_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tabel_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:text="Nama"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="Kelas"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="Tahfidz"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="Tajwid"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="Ket"
                    android:textSize="11sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:padding="7dp">


            </TableLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>